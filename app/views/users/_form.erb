<%= form_with model: @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :height %>
    <%= f.number_field :height %><br>
    <%= f.label :happiness %>
    <%= f.number_field :happiness %><br>
    <%= f.label :nausea %>
    <%= f.number_field :nausea %><br>
    <%= f.label :tickets %>
    <%= f.number_field :tickets %><br>
    <%= f.label :admin, 'Check box if you are a theme park owner' %>
    <%= f.check_box :admin, id: :user_admin %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    
    <%= f.submit 'Create User' %>
<% end %>